{
  "name": "@raystack/shield-js",
  "version": "0.0.1",
  "description": "A js library for shield",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "unpkg": "dist/shield.min.js",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch src",
    "size": "size-limit",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "author": "pyadav9678@gmail.com",
  "license": "Apache-2.0",
  "lint-staged": {
    "*.{json,md,html,js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "200 KB"
    },
    {
      "path": "dist/index.cjs",
      "limit": "200 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.6",
    "esbuild-plugin-external-global": "^1.0.1",
    "lint-staged": "^13.2.3",
    "np": "^7.7.0",
    "prettier": "^2.5.1",
    "size-limit": "^8.2.6",
    "tsup": "^6.7.0",
    "typescript": "4.7"
  },
  "dependencies": {
    "@types/react": "^18.2.5",
    "cross-fetch": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
