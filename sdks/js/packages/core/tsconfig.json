{
  "extends": "@raystack/frontier-tsconfig/react-library.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "target": "ES2015",
    "lib": ["ES2020", "DOM"],
    "paths": {
      "~/*": ["./*"],
      "~hooks": ["./hooks/index.ts"]
    },
    "types": ["jest"]
  },
  "include": ["."],
  "exclude": ["dist", "react/dist", "hooks/dist", "node_modules"]
}
